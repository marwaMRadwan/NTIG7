{{>header.layout}}
{{>navbar.layout}}
<section class="container my-3">
{{#if tasksLen}}
<div class="alert alert-danger ">
no data to show
</div>
{{else}}
<table class="table table-stripped">
    <thead>
        <th>id</th>
        <th>title</th>
        <th>content</th>
        <th>status</th>
        <th>actions</th>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.content}}</td>
            <td>{{this.status}}</td>
            <td>
                <a href="/showSingle/{{this.id}}" class="btn btn-primary">show</a>
                <a href="/editTask/{{this.id}}" class="btn btn-success">edit</a>
                <a href="/deleteTask/{{this.id}}" class="btn btn-danger">delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/if}}
</section>
{{>footer.layout}}